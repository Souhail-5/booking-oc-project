{% extends 'QSBookingBundle::layout.html.twig' %}

{% block breadcrumb %}
    {{ include('QSBookingBundle:Booking:breadcrumb.html.twig', {route: 'qs_booking_checkout'}) }}
{% endblock %}
{% block qsbookingTitle %}{{ event.name }}{% endblock %}
{% block qsbookingContent %}
    <h3 class="text-center meta-color">Vos coordonnées de paiement</h3>
    <form method="POST" id="checkout-wrap">
        {% for reservation in reservations %}
            <h3>{{ reservation.visitor.firstName }} {{ reservation.visitor.lastName }}</h3>
            <p>Billet {{ reservation.ticketPrice.ticket.name }} - {{ reservation.ticketPrice.price.eur }} €</p>
            <hr>
        {% endfor %}
        <script
            src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="pk_test_fdVRc4edwV2ceJjan6KzQFQT"
            data-amount="{{ orderPrice * 100 }}"
            data-name="Musée du Louvre"
            data-description="{{ event.name }}"
            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
            data-locale="auto"
            data-currency="eur">
        </script>
    </form>
    <div class="text-right">
        <button type="submit" form="checkout-wrap" value="submit" class="primary-btn">Valider mon choix</button>
    </div>
{% endblock %}
