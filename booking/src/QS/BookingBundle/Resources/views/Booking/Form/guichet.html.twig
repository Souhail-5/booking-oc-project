{% if form_errors(form) %}
    <div class="form-errors">
        <p><span class="font-900">ATTENTION !</span> Veuillez vérifier que le formulaire a été correctement renseigné :</p>
        {{ form_errors(form) }}
    </div>
{% endif %}
{{ form_start(form, {'attr': {'id': 'guichet-wrap'}}) }}
    <div id="guichet-date">
        <h3><span class="primary-color font-900">1 -</span> <span class="primary-color">Sélectionnez une date</span></h3>
        {{ form_widget(form.eventDate) }}
        <div data-toggle="datepicker-container"></div>
    </div>

    <div id="guichet-tickets" data-prototype="{{ form_widget(form.tickets.vars.prototype)|e('html_attr') }}">
        <h3><span class="primary-color font-900">2 -</span> <span class="primary-color">Choisissez vos billets</span></h3>
        <p class="alert {% if isTicketsAvailable == true %}hide{% endif %}">Aucun billet n'est disponible à la vente pour cette date.</p>
    </div>

    <div id="guichet-user">
        <h3><span class="primary-color font-900">3 -</span> <span class="primary-color">Indiquez votre e-mail</span></h3>
        {{ form_widget(form.email) }}
        <p class="meta-color">Vos billets seront envoyés à cet e-mail.</p>
    </div>

    <div class="hide">
        {{ form_rest(form) }}
    </div>

{{ form_end(form) }}
<div class="text-right">
    <button type="submit" form="guichet-wrap" value="submit" class="primary-btn font-900">Valider mon choix</button>
</div>
